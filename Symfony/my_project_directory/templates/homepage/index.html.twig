{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <br>
    {% if currentuser != null %}
        <a href="/logout">log out</a>
        Hello {{ currentuser.uuid }}
        <br>
        <a href="/useraccount">user account</a>
        <br>
        <a href="/mailer">mailer route</a>
        <br>
        This friendly message is coming from:
        <ul>
            <li>Your controller at <code><a href="{{ '/home/dev/gitrepo/testStudi/Symfony/my_project_directory/src/Controller/HomepageController.php'|file_link(0) }}">src/Controller/HomepageController.php</a></code></li>
            <li>Your template at <code><a href="{{ '/home/dev/gitrepo/testStudi/Symfony/my_project_directory/templates/homepage/index.html.twig'|file_link(0) }}">templates/homepage/index.html.twig</a></code></li>
        </ul>
        <br>
        ALL USERS : 
        {% for user in users %}
            <li>{{ user.uuid|e }}</li>
            <li>{{ user.password|e }}</li>
        {% endfor %}
    {% else %}
        you are not connected
        <a href="/login">log in</a>
    {% endif %}
</div>
{% endblock %}
